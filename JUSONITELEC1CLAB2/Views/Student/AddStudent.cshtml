@model JUSONITELEC1CLAB2.Models.Student

<form asp-action="AddStudent" method="post">
    <div class="form-group">
        <label asp-for="Id">ID</label>
        <input asp-for="Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name">First Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Course">Course</label>
        <select asp-for="Course" class="form-control">
            @foreach (var course in Enum.GetValues(typeof(JUSONITELEC1CLAB2.Models.Course)))
            {
                <option value="@course">@course</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="DateEnrolled">Enrollment Date</label>
        <input asp-for="DateEnrolled" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>