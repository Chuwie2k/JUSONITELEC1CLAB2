<style>
    table.table {
        border: 1px solid black;
    }

        table.table th {
            font-size: 20px;
            font-family: verdana, sans-serif;
            border: 1px solid black;
        }

        table.table td {
            font-family: verdana, sans-serif;
            border: 1px solid black;
        }
</style>

<table class="table">

    <div class="text-center">
        <h1 class="display-4">Instructor</h1>
    </div>

    <tr>
        <td>ID</td>
        <td>First Name</td>
        <td>Last Name</td>
        <td>Status</td>
        <td>Rank</td>
        <td>Hiring Date</td>
        <td>Details</td>
        <td>Edit</td>


    </tr>
    @foreach (var Instructor in Model)
    {
        <tr>
            <td>@Instructor.Id </td>
            <td>@Instructor.FirstName</td>
            <td>@Instructor.LastName</td>
            <td>@Instructor.IsTenured</td>
            <td>@Instructor.Rank</td>
            <td>@Instructor.HiringDate</td>
            <td><a asp-action="ShowDetail" asp-route-id="@Instructor.Id">Show Details</a></td>
            <td><a asp-action="EditInstructor" asp-route-id="@Instructor.Id">Edit Instructor</a></td>
        </tr>
    }
</table>
<a href="@Url.Action("AddInstructor", "Instructor")" class="btn btn-primary">Add Instructor</a>
